<img class="img-fluid rounded" src="https://cdn.mbl.is/frimg/9/92/992545.jpg" style="height: 550px; width: 100%" alt="Responsive image">
<div class="card text-center">
  <div class="card-header py-5 my-3">
    <h2><%= @flat.name %></h2>
  </div>
    <div class="card-body py-5">
      <h5><%= @flat.description %></h5><br>
      <em><p><%= @flat.address %></p></em>
    </div>
      <div class="card-footer d-flex justify-content-around py-5">
        <i class="fas fa-euro-sign"><%= @flat.price_per_night %></i>
        <i class="fas fa-user-friends"><%= @flat.number_of_guests %></i>
      </div>
    <div class="d-flex justify-content-around p-5 m-0 w-100" style="background-color: #3d3d3d;">
      <%= link_to "Home", flats_path, class: "btn btn-outline-light"%>
      <%= link_to 'Edit the flat', edit_flat_path(@flat), class: "btn btn-outline-light" %>
      <%= link_to 'Delete', flat_path(@flat), class: "btn btn-outline-light", method: :delete, data: { confirm: 'Do you really want to?' } %>
    </div>
  </div>
</div>
